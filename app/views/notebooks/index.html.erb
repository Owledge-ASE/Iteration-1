<div class="row top-header">
      <h1 class="col-10">Notebooks</h1>

      <a href="<%= new_notebook_path %>" class="card-link col-2 btn btn-secondary" id="add-note">
        <button type="button" class="btn btn-secondary" >Add Note</button>
      </a>
</div>
<div class="search bar row">
    <%= link_to "Sort", notebooks_sort_path(:sort_by_col=>"title-asc",:search_by_contain=>params[:search_by_contain]), method: :get,class:"col-2 bar-button btn btn-secondary",id:"sort_button" %>
</div>

<div class="btn-group filter bar row">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    Notes Created<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Dashboard", notebooks_dashboard_path(:users_filter=>"notes_created"), method: :get, class: "filter-button dropdown-item" %>Notes Created</li>
    <li><%= link_to "Dashboard", notebooks_dashboard_path(:users_filter=>"notes_liked"), method: :get, class: "dropdown-item" %>Notes Liked</li>
    <li><%= link_to "Dashboard", notebooks_dashboard_path(:users_filter=>"notes_commented"), method: :get, class: "dropdown-item" %>Notes Commented</li>
  </ul>
</div>

<div class="row card-container notes" id="notes">
    <% @notes.each do |note| %>
    <%= render partial: 'parts/card', locals: { note: note } %>
    <% end %>
</div>
</div>


