<div class="d-flex bd-highlight mb-3 p-2">
  <div class="me-auto">
    <div class="header">
        <a href="/" class="header-title owledge_logo" id="owledge_logo"><h1>Owledge</h1></a>
    </div>
  </div>
  <div id="login_section" class="simple-wrapper">
    <%= render 'layouts/login_section' %>
  </div>
</div>
<% if flash[:error].present? %>
<div class="alert alert-warning" id="error_message" class="m-0">
  <%= flash[:error]  %>
  <% if flash.key?(:error_details) and flash[:error_details].length > 0 %>
  <ul>
    <% flash[:error_details].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>
</div>
<% elsif flash.key?(:success) %>
  <div class="alert alert-info" id="success_message" class="m-0">
    <%= flash[:success] %>
  </div>
<% end %>
<%  %>
<% if notice.present? %>
<div class="alert alert-info" id="success_message"><%= notice %></div>
<% end %>
<% if alert.present? %>
<div class="alert alert-danger" id="danger_message"><%= alert %></div>
<% end %>
