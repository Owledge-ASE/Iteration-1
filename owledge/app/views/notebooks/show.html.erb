<div class="row show-notes">
  <div class="main-panel">
    <div class="row top-header mt-0 pt-0">
      <h1 class="col-10 mt-0" id="title"><%= @note.title %></h1>

      <a href="<%= new_notebook_path({parent: @note}) %>" class="card-link col-2">
        <button type="button" class="btn btn-secondary" id="add-note">Add Note</button>
      </a>
    </div>
    <div class="card bg-dark-l1 col-12 main-card">
      <div class="card-body">
        <div class="card-title">
          <h3>Description</h3>
        </div>
        <div class="card-text" id="description">
          <%= @note.description %>
        </div>
      </div>
    </div>
    <% if @note.children.length > 0 %>
      <h3>Children</h3>
      <div class="row notes" id="children">
        <% @note.children.each do |note| %>
          <%= render partial:"parts/card", locals: {note: note} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
  <div class="col-md-3">
    <div class="card bg-dark-l0">
      <div class="card-body" id="reactions">
        <div class="card-title"><h3>Reactions</h3></div>
        <% unless current_user.nil? %>
        <a href="<%= notebook_likes_path(@note.likes) %>" class="btn btn-xs" id="like_button">
          <button type="button" class="btn btn-secondary" id="click_like">
            <i class="bi bi-suit-heart<%= current_user.likes_note(@note) ? "-filled" : ""%>">
            </i>
          </button>
        </a>
        <% end %>
        <span id="num_likes"><%= @note.likes %></span>
      </div>
    </div>
  </div>

